{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "baseUrl": "./",
    "outDir": "./dist"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
